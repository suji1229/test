<div id="content" class="reg">
    <div class="cont_top">
        <h3>채용 FAQ</h3>
    </div>
    <div class="cont_bottom">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="idx" value="@ViewBag.item.idx" />
            <table class="reg_table">
                <colgroup>
                    <col width="130px" />
                    <col width="870px" />
                </colgroup>
                <tr>
                    <th>작성자 </th>
                    <td>@HttpContext.Current.User.Identity.Name</td>
                </tr>
                <tr>
                    <th><label for="engY">영문 사이트*</label></th>
                    <td class="radio_area">
                        <label for="engY"><input type="radio" name="engYn" id="engY" value="Y" title="영문 사이트"> 있음</label>
                        <label for="engN"><input type="radio" name="engYn" id="engN" checked value="N" title="영문 사이트"> 없음</label>
                    </td>
                </tr>
                <tr>
                    <th><label for="deployY">배포*</label></th>
                    <td class="radio_area">
                        <label for="deployY"><input type="radio" name="deployYn" id="deployY" value="Y" title="배포 여부"> 배포</label>
                        <label for="deployN"><input type="radio" name="deployYn" id="deployN" checked value="N" title="배포 여부"> 미배포</label>
                    </td>
                </tr>
            </table>
            <h4>국문 사이트</h4>
            <table class="reg_table">
                <colgroup>
                    <col width="130px" />
                    <col width="870px" />
                </colgroup>
                <tr>
                    <th><label for="title">항목 *</label></th>
                    <td><input type="text" name="title" id="title" class="input_long_type" title="항목" maxlength="100" value="@ViewBag.item.title"></td>
                </tr>
                <tr>
                    <th><label for="contents">답변 *</label></th>
                    <td><textarea name="contents" id="contents" title="내용">@ViewBag.item.contents</textarea></td>
                </tr>
            </table>
            <h4>영문 사이트</h4>
            <table class="reg_table">
                <colgroup>
                    <col width="130px" />
                    <col width="870px" />
                </colgroup>
                <tr>
                    <th><label for="titleEng">항목 </label></th>
                    <td><input type="text" name="titleEng" id="titleEng" class="input_long_type" title="항목" maxlength="100" value="@ViewBag.item.titleEng"></td>
                </tr>
                <tr>
                    <th><label for="contentsEng">답변</label></th>
                    <td><textarea name="contentsEng" id="contentsEng" title="내용">@ViewBag.item.contentsEng</textarea></td>
                </tr>
            </table>
        </form>
        <div class="btn_area">
            <a href="list" class="btn_defualt btn_list">목록</a>
            <a href="javascript:void(0);" class="btn_defualt btn_reg" onclick="modForm();">수정</a>
        </div>
    </div>
</div>

<script>
    lnbSet(8, 2);
    $('input[name="engYn"][value="@ViewBag.item.engYn"]').prop('checked', true);
    $('input[name="deployYn"][value="@ViewBag.item.deployYn"]').prop('checked', true);
    $('input[name="engYn"]').change(function () {
        if ($(this).val() == 'Y') {
            $('#titleEng').prop('disabled', false);
            $('#contentsEng').prop('disabled', false);
        } else {
            $('#titleEng').prop('disabled', true);
            $('#contentsEng').prop('disabled', true);
            $('#titleEng').val('');
            $('#contentsEng').val('');
        }
    });

    function modForm() {
        if (!$('#title').required()) return;
        if (!$('#contents').required()) return;
        if ($('#engY:checked').length == 1) {
            if (!$('#titleEng').required()) return;
            if (!$('#contentsEng').required()) return;
        }

        if (!confirm('수정하시겠습니까')) return;
        $('#content form').attr('action', 'modifyProc').submit();
    };
</script>
