<div id="content" class="reg">
    <div class="cont_top">
        <h3>채용 FAQ</h3>
    </div>
    <div class="cont_bottom">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="idx" value="@ViewBag.item.idx" />
            <table class="reg_table">
                <colgroup>
                    <col width="130px" />
                    <col width="870px" />
                </colgroup>
                <tr>
                    <th>작성자 </th>
                    <td>@ViewBag.item.regId</td>
                </tr>
                <tr>
                    <th><label for="engY">영문 사이트</label></th>
                    <td class="radio_area">
                        @if ("Y".Equals(@ViewBag.item.engYn))
                        {
                            @:있음
                        }
                        else
                        {
                            @:없음
                        }
                    </td>
                </tr>
                <tr>
                    <th><label for="deployY">배포</label></th>
                    <td class="radio_area">
                        @if ("Y".Equals(@ViewBag.item.deployYn))
                        {
                            @:배포
                        }
                        else
                        {
                            @:미배포
                        }
                    </td>
                </tr>
            </table>

            <h4>국문 사이트</h4>
            <table class="reg_table">
                <colgroup>
                    <col width="130px" />
                    <col width="870px" />
                </colgroup>
                <tr>
                    <th><label for="title">항목</label></th>
                    <td>@ViewBag.item.title</td>
                </tr>
                <tr>
                    <th><label for="contents">답변</label></th>
                    <td class="contents">@ViewBag.item.contents</td>
                </tr>
            </table>
            <h4>영문 사이트</h4>
            <table class="reg_table">
                <colgroup>
                    <col width="130px" />
                    <col width="870px" />
                </colgroup>
                <tr>
                    <th><label for="titleEng">항목 </label></th>
                    <td>@ViewBag.item.titleEng</td>
                </tr>
                <tr>
                    <th><label for="contentsEng">답변</label></th>
                    <td class="contents">@ViewBag.item.contentsEng</td>
                </tr>
            </table>
        </form>
        <div class="btn_area">
            <a href="list?@Session["searchString"]" class="btn_defualt btn_list">목록</a>
            <div class="view_btn_area">
                <a href="modify?idx=@ViewBag.item.idx" class="btn_defualt btn_modifyt">수정</a>
                <a href="javascript:void(0);" class="btn_defualt btn_delete" onclick="delForm();">삭제</a>
            </div>
        </div>
    </div>
</div>
<script>
    lnbSet(8, 2);
    function delForm() {
        if (!confirm('삭제하시겠습니까?')) return;
        $('#content form').attr('action', 'delete').submit();
    };
</script>
