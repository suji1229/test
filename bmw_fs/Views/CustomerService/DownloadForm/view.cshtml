<div id="content" class="reg">
    <div class="cont_top">
        <h3>다운로드 자료/양식</h3>
    </div>
    <div class="cont_bottom">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="idx" value="@ViewBag.item.idx" />
            <table class="reg_table">
                <colgroup>
                    <col width="130px" />
                    <col width="870px" />
                </colgroup>
                <tr>
                    <th>작성자 </th>
                    <td>@ViewBag.item.regId</td>
                </tr>
                <tr>
                    <th><label for="">양식명 *</label></th>
                    <td>@ViewBag.item.formName</td>
                </tr>
                <tr>
                    <th><label for="">이용 용도 *</label></th>
                    <td class="tdTextArea">@ViewBag.item.usagePurpose</td>
                </tr>
                <tr class="add_img_area">
                    <th>첨부파일</th>
                    <td class="file_area">
                        @foreach (var file in ViewBag.files)
                        {
                            <div><a href="/Files/fileDownload?fileIdx=@file.fileIdx">@file.originalFilename</a></div>
                        }
                    </td>
                </tr>
                <tr>
                    <th><label for="deployY">배포</label></th>
                    <td class="radio_area">
                        @if ("Y".Equals(@ViewBag.item.deployYn))
                        {
                            @:배포
                        }
                        else
                        {
                            @:미배포
                        }
                    </td>
                </tr>
            </table>
        </form>
        <div class="btn_area">
            <a href="list?@Session["searchString"]" class="btn_defualt btn_list">목록</a>
            <div class="view_btn_area">
                <a href="javascript:void(0);" class="btn_defualt btn_delete" onclick="delForm();">삭제</a>
                <a href="modify?idx=@ViewBag.item.idx" class="btn_defualt btn_modify">수정</a>
            </div>
        </div>
    </div>
</div>
<script>
    lnbSet(".downloadform_mgmt");
    function delForm() {
        if (!confirm('삭제하시겠습니까?')) return;
        $('#content form').attr('action', 'delete').submit();
    };
</script>
