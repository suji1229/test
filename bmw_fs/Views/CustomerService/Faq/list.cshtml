@{
    ViewBag.Title = "FAQ 리스트";
}

<div id="content" class="list">
    <form method="get">
        <div class="cont_top">
            <h3>FAQ 관리</h3>
            <div class="search_box">
                <select name="searchOption" id="searchOption" class="search_select">
                    <option value="">구분</option>
                    <option value="ask">항목</option>
                    <option value="question">답변</option>
                </select>
                <input type="text" name="searchInput" class="search_text" value="@ViewBag.pagination.searchInput" /><input type="text" style="display: none;" />
                <button type="button" class="submit_btn" onclick="searchList();"></button>
            </div>
        </div>
        <div class="cont_bottom">

            <table class="list_table">
                <colgroup>
                    <col width="60px" />
                    <col width="200px" />
                    <col width="*" />
                    <col width="200px" />
                    <col width="100px" />
                </colgroup>
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">카테고리</th>
                        <th scope="col">항목</th>
                        <th scope="col">등록일</th>
                        <th scope="col">배포</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < ViewBag.list.Count; i++)
                    {
                        <tr>
                            <td class="co1">@(ViewBag.pagination.totalItemCount - (ViewBag.pagination.currentPage - 1) * ViewBag.pagination.itemPerPage - i)</td>
                            <td class="co3">@ViewBag.list[i].category</td>
                            <td class="co2 tit_area"><a href="view?idx=@ViewBag.list[i].idx">@ViewBag.list[i].ask</a></td>
                            <td class="co3">@ViewBag.list[i].regDate</td>
                            <td class="co4">@ViewBag.list[i].deployYn</td>
                        </tr>
                    }
                    @if (ViewBag.list.Count == 0)
                    {
                        <tr>
                            <td colspan="5">게시글이 없습니다.</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- pagination -->
            @RenderPage("~/Views/Common/Pagination.cshtml")
            <a href="register" class="btn_defualt btn_reg">등록</a>
        </div>
    </form>
</div>
<script>
    lnbSet(9, 1);
    $('#searchOption').val('@ViewBag.pagination.searchOption');
</script>