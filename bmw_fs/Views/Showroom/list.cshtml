@{
    ViewBag.Title = "전시장 리스트";
}

<div id="content" class="list">
    <form method="get">
        <div class="cont_top">
            <h3>전시장 관리</h3>
            <div class="search_box">
                <select name="searchOption" id="searchOption" class="search_select">
                    <option value="">전체</option>
                    <option value="">브랜드</option>
                    <option value="">전시장명</option>
                </select>
                <input type="text" name="searchInput" class="search_text" value="@ViewBag.pagination.searchInput" /><input type="text" style="display: none;" />
                <button type="button" class="submit_btn" onclick="searchList();"><img src="/resources/images/mgmt/btn_search.gif" alt="" /></button>
            </div>
        </div>
        <div class="cont_bottom">

            <table class="list_table">
                <colgroup>
                    <col width="60px" />
                    <col width="60px" />
                    <col width="150px" />
                    <col width="200px" />
                    <col width="*" />
                    <col width="100px" />
                    <col width="30px" />
                </colgroup>
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">브랜드</th>
                        <th scope="col">시/도</th>
                        <th scope="col">전시장명</th>
                        <th scope="col">주소</th>
                        <th scope="col">전화번호</th>
                        <th scope="col">배포</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < ViewBag.list.Count; i++)
                    {
                        <tr>
                            <td class="co1">@(ViewBag.pagination.totalItemCount - (ViewBag.pagination.currentPage - 1) * ViewBag.pagination.itemPerPage - i)</td>
                            <td class="co2"></td>
                            <td class="co3 tit_area"><a href="view?idx=@ViewBag.list[i].idx"></a></td>
                            <td class="co4"></td>
                            <td class="co5"></td>
                            <td class="co6"></td>
                            <td class="co7"></td>
                        </tr>
                    }
                    @if (ViewBag.list.Count == 0)
                    {
                        <tr>
                            <td colspan="7">게시글이 없습니다.</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- pagination -->
            @RenderPage("~/Views/Common/Pagination.cshtml")
            <a href="register" class="btn_defualt btn_reg">등록</a>
        </div>
    </form>
</div>
<script>
    lnbSet(9, 1);
    $('#searchOption').val('@ViewBag.pagination.searchOption');
</script>