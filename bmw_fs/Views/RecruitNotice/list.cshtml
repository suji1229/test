<div id="content" class="list">
    <div class="cont_top">
        <h3>채용 공고</h3>
        <div class="search_box">
            <select name="" id="">
                <option value="op1">제목</option>
                <option value="op2">내용</option>
            </select>
            <input type="text">
            <button type="button"></button>
        </div>
    </div>
    <div class="cont_bottom">

        <table class="list_table">
            <colgroup>
                <col width="60px" />
                <col width="*" />
                <col width="100px" />
                <col width="100px" />
                <col width="100px" />
            </colgroup>
            <thead>
                <tr>
                    <th>No.</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>접수 기간</th>
                    <th>상태</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < ViewBag.list.Count; i++)
                {
                    <tr>
                        <td>@(ViewBag.pagination.totalItemCount - (ViewBag.pagination.currentPage - 1) * ViewBag.pagination.itemPerPage - i)</td>
                        <td class="tit_area">@ViewBag.list[i].title</td>
                        <td>@ViewBag.list[i].regId</td>
                        <td></td>
                        <td></td>
                    </tr>
                }
                @if (ViewBag.list.Count == 0)
                {
                    <tr>
                        <td colspan="5">게시글이 없습니다.</td>
                    </tr>
                }
            </tbody>
        </table>
        @RenderPage("~/Views/Common/Pagination.cshtml")
        <a href="register" class="btn_defualt btn_reg">등록</a>
    </div>
</div>
