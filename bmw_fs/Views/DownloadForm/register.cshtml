<style>
.reg h4{margin-bottom:10px}
</style>
<div id="content" class="reg">
    <div class="cont_top">
        <h3>다운로드 자료/양식</h3>
    </div>
    <div class="cont_bottom">
        <form method="post" enctype="multipart/form-data">
            <table class="reg_table">
                <colgroup>
                    <col width="130px" />
                    <col width="870px" />
                </colgroup>
                <tr>
                    <th>작성자 </th>
                    <td>@HttpContext.Current.User.Identity.Name</td>
                </tr>                
                <tr>
                    <th><label for="">양식명 *</label></th>
                    <td><input type="text" name="formName" id="formName" class="input_long_type" title="양식명" maxlength="50"></td>
                </tr>
                <tr>
                    <th><label for="">이용 용도 *</label></th>
                    <td><textarea name="usagePurpose" id="usagePurpose" title="이용 용도"></textarea></td>
                </tr>               
                <tr class="add_img_area">
                    <th>첨부파일 *</th>
                    <td class="file_area">
                        <div class="main_img">
                            <span class="file_src"></span>
                            <input type="file" class="input_file" name="formFile" id="formFile" title="첨부파일">
                            <label for="formFile" class="btn_file">찾아보기</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th><label for="deployY">배포*</label></th>
                    <td class="radio_area">
                        <label for="deployY"><input type="radio" name="deployYn" id="deployY" value="Y" title="배포 여부"> 배포</label>
                        <label for="deployN"><input type="radio" name="deployYn" id="deployN" checked value="N" title="배포 여부"> 미배포</label>
                    </td>
                </tr>
            </table>          
        </form>
        <div class="btn_area">
            <a href="list" class="btn_defualt btn_list">목록</a>
            <a href="javascript:void(0);" class="btn_defualt btn_reg" onclick="regForm();">등록</a>
        </div>
    </div>
</div>

<script>
    lnbSet(8, 2);    
    function regForm() {
        if (!$('#formName').required()) return;
        if (!$('#usagePurpose').required()) return;
        if (!$('#formFile').required()) return;
    
        if (!confirm('등록하시겠습니까')) return;
        $('#content form').attr('action', 'registerProc').submit();
    };
</script>
