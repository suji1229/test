@{
    ViewBag.Title = "웹 프로모션 상세";
}
<!Doctype html>
<head>
<style>
.img_view{overflow:hidden; margin-bottom:30px; }
.img_view > div{float:left;width:499.5px; text-align:center}
.img_view > div span{display:block; width:100%; padding:13px 0; font-weight:bold; background-color:#f4f4f4; border-top:1px solid #ccc; border-bottom:1px solid #ccc}
.img_view > div div{padding:30px 0; border-bottom:1px solid #ccc}
.img_view > div div img{width:300px;}
.img_view > div:first-child{border-right:1px solid #ccc;}
.main_img_area dl{margin-bottom:15px; }
.main_img_area dl dt{margin-bottom:10px; font-weight:bold;}
.main_img_area dl dd a{color:blue; text-decoration:underline;}
</style>
</head>
		<div id="content" class="reg">
			<div class="cont_top">
				<h3>관리자 관리</h3>
			</div>
			<div class="cont_bottom">
                <form method="post" enctype="multipart/form-data">
				<table class="reg_table">
					<colgroup>
						<col width="130px" />
						<col width="370px" />
						<col width="130px" />
						<col width="370px" />
					</colgroup>
					<tr>
						<th>작성자</th>
						<td colspan="3">@ViewBag.item.regId</td>
					</tr>
					<tr>
						<th>작성일</th>
						<td>@ViewBag.item.regDate</td>
						<th>게시 기간</th>
						<td>@ViewBag.item.startDate  ~  @ViewBag.item.endDate</td>
					</tr>
					<tr>
						<th>영문 사이트</th>
						@if ("Y".Equals(ViewBag.item.engYn)) {<td>있음</td>}
                        else {<td>없음</td>}
						<th>배포</th>
						<td>배포</td>
					</tr>
				</table>

                <h4>국문사이트</h4>
				<table class="reg_table">
					<colgroup>
						<col width="130px" />
						<col width="870px" />
					</colgroup>
					<tr>
						<th>제목</th>
						<td>@ViewBag.item.title</td>
					</tr>
					<tr>
						<th>썸네일 이미지</th>
                        @foreach (var file1 in ViewBag.thumbList)
                        {
                            <td>@file1.originalFilename</td>
                        }
					</tr>
					<tr>
						<th>본문 상단 이미지</th>
						@foreach (var file2 in ViewBag.topMainList)
                        {
                            <td>@file2.originalFilename</td>
                        }
					</tr>
					<tr>
						<th>본문 이미지</th>
						<td class="main_img_area">
                            @for (var i = 0; i < ViewBag.mainImgList.Count; i++)
                            {
                                <dl>
                                    <dt>[이미지 <span>@(i+1)</span>]</dt>
                                    <dd> -  이미지 : <span>@ViewBag.mainImgList[i].originalFilename</span></dd>
                                    <dd> -  URL : <a href="@ViewBag.imgUrlList[i]">@ViewBag.imgUrlList[i]</a></dd>
                                </dl>
                            }
						</td>
					</tr>
                     <tr>
                        <th>상품 페이지 배너</th>
                        <td>
                        @if ("N".Equals(ViewBag.item.productBannerYn))
                        {
                            <p>미배포</p>
                        }
                        else
                        {
                            if ("Y".Equals(ViewBag.item.productType1) && "Y".Equals(ViewBag.item.productType2))
                            {
                                <p>잔가보장형 상품, 일반 할부 상품</p>
                            }
                            if ("Y".Equals(ViewBag.item.productType1) && (ViewBag.item.productType2 == null))
                            {
                                <p>잔가보장형 상품</p>
                            }
                            if ("Y".Equals(ViewBag.item.productType2) && (ViewBag.item.productType1 == null))
                            {
                                <p>일반 할부 상품</p>
                            }
                        }
                         </td>
                     </tr>
				</table>

                @if ("Y".Equals(ViewBag.item.engYn))
                {
                    <h4>영문사이트</h4>
                    <table class="reg_table">
                        <colgroup>
                            <col width="130px" />
                            <col width="870px" />
                        </colgroup>
                        <tr>
                            <th>제목</th>
                            <td>@ViewBag.item.titleEng</td>
                        </tr>
                        <tr>
                            <th>썸네일 이미지</th>
                            @foreach (var file1 in ViewBag.thumbEngList)
                            {
                                <td>@file1.originalFilename</td>
                            }
                        </tr>
                        <tr>
                            <th>본문 상단 이미지</th>
                            @foreach (var file2 in ViewBag.topMainEngList)
                            {
                                <td>@file2.originalFilename</td>
                            }
                        </tr>
                        <tr>
                            <th>본문 이미지</th>
                            <td class="main_img_area">
                                @for (var i = 0; i < ViewBag.mainImgEngList.Count; i++)
                                {
                                    <dl>
                                        <dt>[이미지 <span>@(i + 1)</span>]</dt>
                                        <dd> -  이미지 : <span>@ViewBag.mainImgEngList[i].originalFilename</span></dd>
                                        <dd> -  URL : <a href="@ViewBag.imgUrlEngList[i]">@ViewBag.imgUrlEngList[i]</a></dd>
                                    </dl>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>상품 페이지 배너</th>
                            <td>
                                @if ("N".Equals(ViewBag.item.productBannerYnEng))
                                {
                                    <p>미배포</p>
                                }
                                else
                                {
                                    if ("Y".Equals(ViewBag.item.productType1Eng) && "Y".Equals(ViewBag.item.productType2Eng))
                                    {
                                        <p>잔가보장형 상품, 일반 할부 상품</p>
                                    }
                                    if ("Y".Equals(ViewBag.item.productType1Eng) && (ViewBag.item.productType2Eng == null))
                                    {
                                        <p>잔가보장형 상품</p>
                                    }
                                    if ("Y".Equals(ViewBag.item.productType2Eng) && (ViewBag.item.productType1Eng == null))
                                    {
                                        <p>일반 할부 상품</p>
                                    }
                                }
                            </td>
                        </tr>
                    </table>
                }
                <input type="hidden" name="idx" value="@ViewBag.item.idx" />
				</form>
                <div class="btn_area">
			        <a href="list" class="btn_defualt btn_list">목록</a>
					<div class="view_btn_area">
						<a href="javascript:void(0);" onclick="modForm();" class="btn_defualt btn_modifyt">수정</a>
						<a href="#" class="btn_defualt btn_delete">삭제</a>
					</div>
				</div>
			</div>
		</div>
<script>
    lnbSet(2, 1);
    function modForm() {
        $('form').attr('action', 'modify').submit();
    }
(function(){
	$(".btn_delete").click(function(){
		confirm("삭제하시겠습니까?");
	});
})();
</script>